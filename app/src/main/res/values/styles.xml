<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/mainTopColor</item>
        <item name="colorPrimaryDark">@color/mainTopColor</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">@color/mainTopColor</item>
    </style>

    <style name="Translucent" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="TextAppearance.AppCompat.SmallTitle">
        <item name="android:textSize">18dp</item>
    </style>
    <style name="TextAppearance.AppCompat.BigTitle">
        <item name="android:textSize">24dp</item>
    </style>
    <style name="menu_labels_style">
        <item name="android:background">@drawable/shape_background_beige_round_textview</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
