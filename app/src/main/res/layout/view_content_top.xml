<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/view_content_top_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="注册帐号"
            android:maxLines="1"
            android:maxLength="12"
            android:ellipsize="end"
            android:gravity="center|left"
            android:textSize="14sp"
            android:id="@+id/view_content_top_text" />

       <TextView
           android:id="@+id/view_content_top_comment"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="111"
           android:textSize="8sp"
           android:gravity="bottom"
           android:padding="6dp"
           android:drawablePadding="4dp"
           android:drawableLeft="@drawable/ic_comment"/>
        <TextView
            android:id="@+id/view_content_top_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"
            android:textSize="8sp"
            android:gravity="bottom"
            android:padding="6dp"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/ic_live_no"/>
        <ImageView
            android:id="@+id/view_content_top_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:src="@drawable/ic_share"/>
        <ImageView
            android:id="@+id/view_content_top_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_more"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/background_edit_top"/>
</LinearLayout>