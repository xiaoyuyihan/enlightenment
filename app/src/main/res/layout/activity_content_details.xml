<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_details_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/view_background"
    tools:context="enlightenment.com.details.ContentDetailsActivity">
    <include
        android:id="@+id/view_content_top"
        layout="@layout/view_content_top" />
    <FrameLayout
        android:id="@+id/content_details_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_content_top"
        android:layout_alignParentStart="true">

    </FrameLayout>
    <enlightenment.com.view.CircularTextView
        android:id="@+id/view_content_details_comment"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="48dp"
        android:layout_marginRight="24dp"
        android:transitionName="commentView"
        app:backgroudColor="@color/mainTopColor"
        app:text="评论"
        app:textColor="@color/white"
        app:textSize="16sp" />
</RelativeLayout>