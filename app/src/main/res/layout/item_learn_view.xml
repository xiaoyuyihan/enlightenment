<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_learn_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <enlightenment.com.view.ArticleView
        android:id="@+id/item_learn_image_article"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginRight="56dp"
        android:layout_toLeftOf="@+id/item_learn_image_follow"
        app:articleHeight="4dp"
        app:articleTextSize="8sp"
        app:backgroundColor="@color/mainTopColor"
        app:completeColor="@color/colorPrimaryDark"
        app:textArticleColor="@color/mainTopColor"
        app:textCompleteColor="@color/colorPrimaryDark"
        app:completeDegree="0.1" />

    <TextView
        android:id="@+id/item_learn_image_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/ic_un_follow"
        android:padding="4dp"
        android:text="关注"
        android:textSize="10sp" />

</RelativeLayout>