<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <enlightenment.com.view.CircularTextView
        android:id="@+id/item_plan_circular"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="6dp"
        app:text="计"
        app:textColor="@color/white"
        app:textSize="16sp"
        app:backgroudColor="@color/mainTopColor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="学习并记录《中国艺术史》"
        android:id="@+id/item_plan_message"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:textSize="12sp"
        android:maxLength="24"
        android:padding="2dp"/>
    <TextView
        android:id="@+id/item_plan_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/mainTopColor"
        android:gravity="center_vertical"
        android:layout_marginRight="6dp"
        android:text="GMT 2:00" />
    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_delete"
        android:padding="8dp"
        android:id="@+id/item_plan_delete" />
</LinearLayout>