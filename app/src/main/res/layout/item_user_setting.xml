<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:padding="4dp"
    android:background="@color/view_background">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:src="@drawable/ic_set_message"
        android:id="@+id/item_user_setting_image" />
    
    <ch.ielse.view.SwitchView
        android:id="@+id/item_user_setting_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        app:offColor="@color/mainTopColor"
        app:primaryColor="@color/mainTopColor"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/item_user_setting_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/item_user_setting_image"
        android:layout_centerVertical="true"
        android:textColor="@color/text_color"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp" />

</RelativeLayout>