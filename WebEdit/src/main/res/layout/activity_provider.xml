<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/provider_top_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingTop="18dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/provider_top_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_black_back"/>
        <TextView
            android:id="@+id/provider_top_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="6dp"
            android:textStyle="bold"
            android:text="最近"
            android:gravity="center_vertical"
            android:textColor="@color/black_50"/>
        <TextView
            android:id="@+id/provider_top_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:text="( 0 )"/>
        <TextView
            android:id="@+id/provider_top_subject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:text="确定"
            android:textStyle="bold"
            android:layout_marginRight="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/black_50"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/provider_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/provider_top_layout"></FrameLayout>
</RelativeLayout>
