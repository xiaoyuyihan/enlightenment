<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <VideoView
        android:id="@+id/view_dialog_provider_video_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layerType="none"
        android:layout_centerVertical="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:id="@+id/view_dialog_provider_video_image"/>
    <LinearLayout
        android:id="@+id/provider_top_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingTop="18dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/provider_top_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="6dp"
            android:text="相册"
            android:drawableLeft="@drawable/ic_white_black"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/provider_top_subject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:text="确定"
            android:gravity="center_vertical"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>