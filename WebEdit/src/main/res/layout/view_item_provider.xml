<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="88dp"
    android:layout_height="88dp"
    android:layout_marginBottom="2dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/view_item_provider_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_audio" />
    <CheckBox
        android:id="@+id/view_item_provider_image_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_alignTop="@+id/view_item_provider_image"
        android:layout_alignEnd="@+id/view_item_provider_image"
        style="@style/ImageCheckStyle"/>

    <TextView
        android:id="@+id/view_item_provider_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_item_provider_image"
        android:layout_alignEnd="@+id/view_item_provider_image"
        android:paddingBottom="2dp"
        android:paddingRight="8dp"
        android:text="2:00" />
</RelativeLayout>