<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/view_item_provider_text"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:paddingLeft="6dp"
        android:paddingRight="24dp"
        android:gravity="left"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/view_item_provider_text_image_0"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:src="@drawable/ic_audio"/>
        <ImageView
            android:id="@+id/view_item_provider_text_image_1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:src="@drawable/ic_audio"/>
        <ImageView
            android:id="@+id/view_item_provider_text_image_2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:src="@drawable/ic_audio"/>
        <ImageView
            android:id="@+id/view_item_provider_text_image_3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:src="@drawable/ic_audio"/>
    </LinearLayout>
</LinearLayout>