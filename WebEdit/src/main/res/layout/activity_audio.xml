<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/audio_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="18dp"
        android:padding="6dp"
        android:src="@drawable/ic_black_back" />

    <TextView
        android:id="@+id/view_top_text"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:text="音频录制"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/audio_back"
        android:layout_toStartOf="@id/audio_project"/>

    <ImageView
        android:id="@+id/audio_project"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_margin="18dp"
        android:padding="6dp"
        android:src="@drawable/ic_audio_set" />

    <com.audio.wave.view.WavaTimeView
        android:id="@+id/audio_wave_sur"
        android:layout_width="fill_parent"
        android:layout_centerVertical="true"
        android:layout_height="180dp"/>

    <com.audio.wave.view.WaveformView
        android:id="@+id/audio_wave_view"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_centerVertical="true"
        android:layout_height="180dp" />

    <ImageView
        android:id="@+id/audio_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="6dp"
        android:layout_margin="24dp"
        android:src="@drawable/ic_audio_delete"/>
    <ImageView
        android:id="@+id/audio_record_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:padding="6dp"
        android:src="@drawable/ic_audio_start"/>
    <ImageView
        android:id="@+id/audio_play_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:padding="6dp"
        android:src="@drawable/ic_audio_play"/>
    <ImageView
        android:id="@+id/audio_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="24dp"
        android:padding="6dp"
        android:src="@drawable/ic_audio_send"/>

    <TextView
        android:id="@+id/audio_file_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/audio_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:padding="6dp"
        android:text="文件名" />


</RelativeLayout>