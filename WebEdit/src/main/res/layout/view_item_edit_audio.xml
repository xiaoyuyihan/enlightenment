<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/powderBlue"
    android:layout_marginBottom="4dp"
    android:layout_height="80dp">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/ic_edit_audio_play"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:id="@+id/view_item_edit_audio_play" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/view_item_edit_audio_play"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/white"
        android:padding="4dp"
        android:textSize="12sp"
        android:id="@+id/view_item_edit_audio_top" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1000"
        android:progress="0"
        android:thumb="@drawable/ic_seekbar_thumb"
        android:layout_alignStart="@+id/view_item_edit_audio_top"
        android:layout_below="@+id/view_item_edit_audio_top"
        android:layout_marginLeft="-16dp"
        android:layout_marginRight="-16dp"
        android:padding="4dp"
        android:id="@+id/view_item_edit_audio_seekbar"
        android:layout_alignEnd="@+id/view_item_edit_audio_top" />

    <TextView
        android:text="0:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_item_edit_audio_seekbar"
        android:textSize="10sp"
        android:layout_alignStart="@+id/view_item_edit_audio_top"
        android:id="@+id/view_item_edit_audio_current_time" />

    <TextView
        android:text="5:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_item_edit_audio_time"
        android:textSize="10sp"
        android:layout_alignBottom="@+id/view_item_edit_audio_current_time"
        android:layout_alignEnd="@+id/view_item_edit_audio_top"
        android:layout_alignTop="@+id/view_item_edit_audio_current_time" />

</RelativeLayout>